<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="SplashThem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="PiecePhotoDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
    <style name="PopupOverlay" parent="Theme.MaterialComponents.Light">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#80000000</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="BodyTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/SecondaryTextColor</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#80000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color_selector</item>
        <item name="boxStrokeErrorColor">@color/colorAccentDark</item>


    </style>

    <style name="MulishRegular16spPrimaryTextColor">
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ProductDetailTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?android:attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/ProductDetailTabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/black</item>
    </style>




    <style name="ProductDetailTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DialogStyle2">

        <item name="android:windowEnterAnimation"> @anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
    <style name="customCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
    </style>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#212121</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="DialogStyleFullscreen" >
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>